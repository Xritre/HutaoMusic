<%- include ("../partials/header.ejs") %>
<section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Artists</h1>
        <p class="lead text-muted">List of all artists</p>
          <a href="/artists/new" class="btn btn-primary my-2">Add new artist </a>
        </p>
      </div>
    </div>
  </section>

  <div class="album py-5 bg-all">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 ">
      <% artists.forEach(function(artists){ %>
        <div class="col">
          <div class="card shadow-sm">
              <img src="<%= artists.coverImage %>"  class="artists-index-image">
            <div class="card-body">
              <p class="card-text"> <%= artists.name %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="/artists/<%= artists._id %>" class="btn btn-sm btn-outline-secondary">View</a>
                </div>
              </div>
            </div>
          </div>
        </div> 
       <% }); %>
        </div>
      </div>
     </div>



<%- include ("../partials/footer.ejs") %>