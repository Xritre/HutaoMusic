<%- include ("../partials/header.ejs") %>
<div class="container">
    <div class="">
        <h1><%= artist.name %></h1>
        <img src="<%= artist.coverImage %>">
    </div> 
    <% if(currentUser && currentUser.isAdmin ){ %>
    <a href="/artists/<%= artist._id %>/edit" class="btn btn-sm btn-outline-secondary">Edit</a>
    <form id="delete-form" action="/artists/<%= artist._id %>?_method=DELETE" method="post">
        <button type="submit" class="btn btn-sm btn-outline-secondary">Delete</button>
    </form>
    <% } %>
    <h1>Songs</h1>
    <% artist.songs.forEach(function(song){ %>
        <a href="../songs/<%=song._id%>"></> <%= song.name %></a>
        <img src="<%= song.coverImage %>" class="artists-song-image">
    <% }) %>
   
</div>              

<%- include ("../partials/footer.ejs") %>